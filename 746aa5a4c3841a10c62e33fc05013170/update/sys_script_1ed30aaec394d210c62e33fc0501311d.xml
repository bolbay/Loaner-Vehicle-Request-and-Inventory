        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	// Add your code here
	var track = current.vehicle_status;
	var gr = new GlideRecord('x_1395283_lva_loaner_catalog');
	
			gr.addQuery('sys_id',current.vehicle);
			gr.query();
			if (gr.next()){

			if(track =='pending release' || track =='out on the field' || track =='returned for inspecton' || track =='sent for servicing'){
				
				gr.status = 'unavailable';

			}
			else
			if(track=='returned to warehouse'){
				gr.status = 'available';
			}
			else
			if(track=='decommissioned'){
			gr.status = 'decommissioned';

			}
				gr.update();
		
	
	}

})(current, previous);]]></script>
